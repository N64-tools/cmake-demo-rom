{
  "buildType": {
    "default": "debug",
      "choices": { 
        "debug": {
          "short": "Debug",
          "long": "Emit debug information without performing optimizations",
          "buildType": "Debug"
        },
        "release": {
          "short": "release",
          "long": "Optimize for smallest binary size",
          "buildType": "Release"
        }   
      }
  },
  "TARGET": 
  {
    "default": "NO_DEPLOY",
    "choices": {
      "FLASHCART": {
        "short": "Flashcart",
        "settings": {
          "HARDWARE_TYPE" : "FLASHCART",
          "BUILD_VERSION" : "0.0.1",
          "DEPLOY_EXE" : "${workspaceFolder}/tools/ed64usb/usbtool.exe",
          "DEPLOY_PARAMETERS" : "${workspaceFolder}/build/BUILD-DEMO.v64"
        }
      },
      "EMULATOR": {
        "short": "Emulator",
        "settings": {
          "HARDWARE_TYPE" : "EMULATOR",
          "BUILD_VERSION" : "0.0.1",
          "DEPLOY_EXE" : "${workspaceFolder}/tools/cen64/cen64-windows-x86_64.exe",
          "DEPLOY_PARAMETERS" : "-controller num=1 ${workspaceFolder}/tools/cen64/pifdata.bin ${workspaceFolder}/build/BUILD-DEMO.v64"
        }
      },
      "NO_DEPLOY": {
        "short": "No Deployment",
        "settings": {
          "HARDWARE_TYPE" : "None",
          "BUILD_VERSION" : "0.0.1",
          "DEPLOY_EXE" : "",
          "DEPLOY_PARAMETERS" : ""
        }
      }
    }
  },
  "SDK": 
  {
    "default": "LIBDRAGON",
    "choices": {
      "LIBDRAGON": {
        "short": "LibDragon",
        "settings": {
          "SDK_TYPE" : "LIBDRAGON",
          "CMAKE_TOOLCHAIN_FILE" : "${workspaceFolder}/CMake/toolchain.libdragon.cmake",
          "TOOLCHAIN_PREFIX" : "${workspaceFolder}/toolchain/gcc-toolchain-mips64",
          "LIBDRAGON_PREFIX": "${workspaceFolder}/toolchain/libdragon"
        }
      }
    }
  }
}